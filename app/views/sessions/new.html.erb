<h1>Log in</h1>

<%= form_with url: login_path, local: true do |form| %>
  <div>
    <%= form.label :email %><br>
    <%= form.email_field :email, placeholder: "email@example.com" %>
  </div>

  <div>
    <%= form.label :password %><br>
    <%= form.password_field :password %>
  </div>

  <div>
    <%= form.submit "Log in" %>
  </div>
  <p>Want to Sign up? <%= link_to "Signup", signup_path %></p>

<% end %>