
<div class="post">
<h1>Posts#show</h1>

<h1><%= @post.title %></h1>
<p><%= @post.body %></p>

<ul>
  <li><%= link_to "Edit", edit_post_path(@post) %></li>
  <li><%= link_to "Destroy", post_path(@post), 
          data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %></li>
</ul>

<hr>

<h2>Add a comment:</h2>
<%= form_with(model: [ @post, Comment.new ]) do |form| %>
  <div>
    <%= form.label :body %><br>
    <%= form.text_area :body %>
  </div>
  <div>
    <%= form.submit %>
  </div>
<% end %>
</div>
